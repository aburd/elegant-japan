<div class="container">

	<div class="row">
		<div class="col-xs-12">
			<h1>Welcome to {{title}}</h1>
		</div>
	</div>

	<ul class="products-list wrap row">
		{{#products}}
		<li class="col-md-5">
			
			<h3>{{name}}</h3> <br>
			<div class="image">
				<img src="{{cover}}" alt="">
			</div>
			<div> {{{description}}} </div>
			{{inventory}} <br>
			<span class="price">{{display_price}}</span>
			<div class="controls">
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
				</button>
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add to cart
				</button>
				<button type="button" class="btn btn-default btn-lg">
				  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Contact us
				</button>

			</div>
		</li>
		{{/products}}	
	</ul>

</div>
